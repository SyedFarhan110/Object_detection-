<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextureView
        android:id="@+id/textureView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomDashboard"
        android:layout_alignParentTop="true" />

    <SurfaceView
        android:id="@+id/overlayView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomDashboard"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent" />

    <!-- Image/Video display view (hidden by default) -->
    <ImageView
        android:id="@+id/staticImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomDashboard"
        android:layout_alignParentTop="true"
        android:visibility="gone"
        android:scaleType="fitCenter"
        android:background="@android:color/black" />

    <!-- Top overlay: FPS only -->
    <LinearLayout
        android:id="@+id/topOverlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal"
        android:background="@drawable/gradient_top"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:elevation="4dp">

        <TextView
            android:id="@+id/fpsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FPS: --"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="18sp"
            android:shadowColor="#80000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="3" />

    </LinearLayout>

    <!-- Settings Button in top right -->
    <ImageButton
        android:id="@+id/settingsButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_margin="12dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_menu_manage"
        android:tint="@android:color/white"
        android:elevation="4dp"
        android:contentDescription="Settings"
        android:scaleType="fitCenter"
        android:padding="8dp" />

    <!-- Bottom Control Bar with Camera and Upload buttons -->
    <LinearLayout
        android:id="@+id/controlBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottomDashboard"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="12dp"
        android:background="@drawable/gradient_top"
        android:elevation="4dp">

        <Button
            android:id="@+id/cameraButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="ðŸ“· Camera"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="12dp"
            android:background="@drawable/dashboard_item_bg" />

        <Button
            android:id="@+id/uploadButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="ðŸ“ Upload"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="12dp"
            android:background="@drawable/dashboard_item_bg" />

    </LinearLayout>

    <!-- Bottom Dashboard Box - Shows top 2 detected objects -->
    <LinearLayout
        android:id="@+id/bottomDashboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp"
        android:background="@drawable/dashboard_background"
        android:elevation="6dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:id="@+id/dashboardItem1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="12dp"
            android:background="@drawable/dashboard_item_bg"
            android:layout_marginEnd="8dp">

            <TextView
                android:id="@+id/dashboardEmoji1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ”"
                android:textSize="32sp"
                android:paddingEnd="8dp"/>

            <TextView
                android:id="@+id/dashboardCount1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/dashboardItem2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="12dp"
            android:background="@drawable/dashboard_item_bg"
            android:layout_marginStart="8dp">

            <TextView
                android:id="@+id/dashboardEmoji2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ”"
                android:textSize="32sp"
                android:paddingEnd="8dp"/>

            <TextView
                android:id="@+id/dashboardCount2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>